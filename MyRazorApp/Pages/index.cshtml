@page
@model indexModel


<h1>Categorias</h1>
<table>
    <thead>
    <tr>
        <td>ID</td>
        <td>Title</td>
        <td>Price</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model.Categories)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Title</td>
            <td>@category.Price.ToString("C", new CultureInfo("ja-JP"))</td>
        </tr>
    }      
    </tbody>
</table>


